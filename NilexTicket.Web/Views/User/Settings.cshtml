@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model NilexTicket.ModelView.UserViewModel

<div id="page-inner">
    <div class="row">
        <div class="col-md-9">
            <h1 class="page-head-line">Account Setting</h1>
            <div id="mesage" class="alert alert-info" style="margin-top:10px" hidden>
                Güncelleme başarılı
            </div>
            @using (Ajax.BeginForm("Settings", "User", FormMethod.Post, new AjaxOptions { OnSuccess = "success", OnFailure = "fail" }, new { enctype = "multipart/form-data", id="kayitform" }))
            {
                @Html.LabelFor(x => x.FullName)
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })    <br />
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger"})    <br />
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger"})    <br />
                @Html.LabelFor(x => x.Mail)
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control"})
                @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger"})    <br />
                <br />
                <input type="submit" id="btnGuncelle" class="btn btn-primary" value="Güncelle" />
            }
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/Content/js/setAccount.js"></script>