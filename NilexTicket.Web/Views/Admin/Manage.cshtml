@{
    ViewBag.Title = "Admin Manager";
}
@model List<NilexTicket.DB.User>
<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">Admin Management Panel</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    <form action="/" method="post">
                        <h4>Admin Create</h4>
                        <hr>
                        <div class="alert alert-danger" id="announcement" hidden></div>
                        <label>User Choose</label>
                        <select class="form-control" id="kul" name="kul" required>
                            <option value="" selected>-Choose-</option>
                            @foreach (var item in Model)
                            {
                                <option id="op-@item.ID" value="@item.ID">@item.Username</option>
                            }
                        </select>                <br>
                        <input type="button" onclick="GivePermission()" value="Authorize" class="btn btn-info btn-lg">
                    </form>

                </div>
                <div class="col-md-6">
                    <h4>Edit Admin List</h4>
                    <hr>
                    <div class="alert alert-danger" id="Message" hidden></div>
                    <br />

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID </th>
                                    <th>User </th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Adminler)
                                {

                                    if (item.Username != ViewBag.admin)
                                    {
                                        <tr id="tr-@item.ID">
                                            <td>@item.ID</td>
                                            <td id="kulAdi-@item.ID" style="width:300px">@item.Username</td>
                                            <td>
                                                <input type="button" id="btn-@item.ID" class="btn btn-danger btn-xs" onclick="AdminDelete(@item.ID)" value="Remove">
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/adminPanel.js"></script>

